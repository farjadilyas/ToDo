<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="?attr/foregroundItemColor"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:contentPaddingLeft="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:backgroundTint="?attr/textColor"
            android:cropToPadding="false"
            android:foregroundTint="?attr/textColor"
            android:padding="6dp"
            android:paddingEnd="12dp"
            android:scaleType="center"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:srcCompat="@drawable/ic_unchecked"
            app:tint="?attr/textColor" />

        <TextView
            android:id="@+id/text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="My first task"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?attr/textColor"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0"
            android:background="?attr/lightTextColor"
            android:backgroundTint="?attr/lightTextColor" />

        <ImageView
            android:id="@+id/date_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:scaleType="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@drawable/ic_today"
            app:tint="?attr/foregroundColor" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAlignment="viewStart"
            android:textColor="?attr/foregroundColor"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAlignment="viewStart"
            android:textColor="?attr/foregroundColor"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>


</androidx.cardview.widget.CardView>